
<%# describes about each temple %>
<div class="box hoverable padding-10 box-border-blue">
	<div class="pull-left width-30"><%= link_to temple.name, admin_temple_path(temple), :remote=>true, :class=>"font-size-13" %>
	</br>
	<%#= link_to temple.site.display_name, admin_site_path(temple.site), :class=>"text-color-red font-size-11" %>
	</div>
	<div class="pull-left width-60"><%= temple.description[0..100] %></div>
	<div class="pull-right width-10">
		<%#= link_to raw("<i class=\"icon-white icon-edit \"></i>"), edit_admin_user_path(user), :class=>"label pull-right", :remote=>true %>
		<!-- <div class="cl-5"></div> -->
		<%#= link_to raw("<i class=\"icon-white icon-edit \"></i>"), edit_admin_temple_path(temple), :class=>"label pull-right", :remote=>true %>
		<div class="cl-5"></div>
		<%#= link_to raw("<i class=\"icon-white icon-remove \"></i>"), admin_temple_path(temple), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"label pull-right", :remote=>true %>
	</div>
	<div class="cl"></div>
</div>