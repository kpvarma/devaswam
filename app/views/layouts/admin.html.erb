  </head>

  <body>

    <div class="header-block clearfix">
			<div id="div_page_header">
      	<%= render :partial=>"/layouts/admin/header" %>
			</div>
			<div id="div_page_navbar">
      	<%= render :partial=>"/layouts/admin/navbar" %>
			</div>
    </div>
		
		<%#* Show flash messages if controller has set any. %>
		<div id="div_flash_message">
			<%= render :partial=>"/layouts/common/display_flash" %>
		</div>
		
    <div class="container-fluid padding-top-10" style="min-height:400px;">

      <%= yield %>
			
    </div>

    <%= render :partial=>"/layouts/admin/footer" %>

		<%#* Modal for showing popup forms %>
		<div id="div-modal-popup" class="modal wider-modals hide fade" tabindex="-3" role="dialog" aria-labelledby="Show Message" aria-hidden="true"></div>
		
		<%#* Modal for showing popup messages %>
		<div id="div-modal-popup-message" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="Show Message" aria-hidden="true">
		  <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		    <h3 id="h3-modal-popup-message-header">Modal header</h3>
		  </div>
		  <div class="modal-body">
		    <p>One fine body…</p>
		  </div>
		  <div class="modal-footer">
		    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		  </div>
		</div>
		
		<%#* Loading Javascripts %>
    <%= javascript_include_tag "application" %>
    <%= yield(:local_script) %>

