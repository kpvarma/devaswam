    <%= stylesheet_link_tag "application", :media => "all" %>

    <%= csrf_meta_tags %>
    
		<!-- <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900,400italic' rel='stylesheet' type='text/css'> -->
